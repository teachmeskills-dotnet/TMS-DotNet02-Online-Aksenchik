@model CourseProject.Mvc.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Регистрация";
}

<div class="main__registration">
        <form class="register__form" method="post" asp-controller="Account" asp-action="Register">
            <div asp-validation-summary="ModelOnly"></div>
            <div class="registration__block">
                <div class="mine__form">Придумайте логин</div>
                <input type="text" placeholder="Логин" class="mine__input" asp-for="Login" />
            </div>
            <div class="registration__block">
                <label class="mine__form" asp-for="Password"></label><br />
                <input placeholder="Пароль" class="mine__input" asp-for="Password" />
            </div>
            <div class="registration__block">
                <label class="mine__form" asp-for="PasswordConfirm"></label><br />
                <input placeholder="Повторите пароль" class="mine__input" asp-for="PasswordConfirm" />
            </div>
            <div class="registration__block">
                <div class="mine__form">Действуйщая почта</div>
                <input placeholder="your@mail.com" class="mine__input" asp-for="Email" />
            </div>
            <div class="registration__block">
                <div class="mine__form">Год Рождения</div>
                <input type="datetime" class="mine__input" asp-for="Year" />
            </div>
            <div>
                <button type="submit" class="mine__button">Регистрация</button>
            </div>
        </form>
    </div>
