@model string
@{
    ViewBag.Title = "Добавить роль";
    Layout = "~/Views/Shared/_Master.cshtml";
}

<div asp-validation-summary="All" class="text-danger"></div>

<form asp-action="Create" method="post" class="main__create-role">
    <div class="form-group">
        <label class="mine__form" for="name">Новая роль</label>
        <input name="name" class="mine__input" />
    </div>
    <button type="submit" class="mine__button">Добавить</button>
</form>