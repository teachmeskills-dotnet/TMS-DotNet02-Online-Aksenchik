@model IEnumerable<CourseProject.Mvc.Models.User>
    @{
        ViewBag.Title = "Список пользователей";
        Layout = "~/Views/Shared/_Master.cshtml";
    }

<a asp-controller="Roles" asp-action="UserList" class="mine__button">Права пользователя</a>
<a asp-controller="Roles" asp-action="Index" class="mine__button">Список ролей</a>

    <table>
        <tr><th>Email</th><th>Год</th><th>Изменить</th><th>Удалить</th></tr>
        @foreach (var user in Model)
        {
        <tr>
            <td>@user.Email</td>
            <td>@user.Year</td>
            <td>
                <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                    <a class="mine__button" asp-action="Edit" asp-route-id="@user.Id">Изменить</a>
                </form>
            </td>
            <td>
                <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                    <button type="submit" class="mine__button">
                        Удалить
                    </button>
                </form>
            </td>
        </tr>
        }
    </table>
