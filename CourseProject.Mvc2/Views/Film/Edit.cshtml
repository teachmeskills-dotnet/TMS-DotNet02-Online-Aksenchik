@model CourseProject.Mvc2.Models.Film
@{
    ViewBag.Title = "Редактирование пользователя";
}
<form asp-action="edit" asp-controller="Film" asp-route-id="@Model.Id">
    <div class="form-group">
        <label asp-for="NameFilms" class="control-label">Имя</label>
        <input type="text" asp-for="NameFilms" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="AgeLimit" class="control-label">Возраст</label>
        <input type="number" asp-for="AgeLimit" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-default" />
    </div>
</form>