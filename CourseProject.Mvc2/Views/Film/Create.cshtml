@model IEnumerable<CourseProject.Mvc2.Models.Film>
    @{
        ViewBag.Title = "Все пользователи";
    }
    <table class="main__addFilm">

        @foreach (var item in Model)
        {
            <tr>
                <td>@item.NameFilms</td>
                <td>
                    <a asp-action="Details" asp-controller="Film" asp-route-id="@item.Id">Подробнее</a> |
                    <a asp-action="Edit" asp-controller="Film" asp-route-id="@item.Id">Изменить</a> |
                    <a asp-action="Delete" asp-controller="Film" asp-route-id="@item.Id">Удалить</a>
                </td>
            </tr>
        }
    </table>