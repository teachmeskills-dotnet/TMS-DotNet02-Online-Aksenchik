@model CourseProject.Mvc2.Models.Film
@{
    ViewBag.Title = "Удаление поста";
}

<div>
    <dl class="main__addFilm">
        <dt>Имя</dt>
        <dd>
            @Html.DisplayFor(model => model.NameFilms)
        </dd>

        <dt>Возраст</dt>
        <dd>
            @Html.DisplayFor(model => model.AgeLimit)
        </dd>
    </dl>

    <div>
        <form asp-controller="Film" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>